import java.util.Arrays;
import java.util.Scanner;

public class SwapElements {
    public static void swap(int[] arr, int index1, int index2) {
        int temp = arr[index1];
        arr[index1] = arr[index2];
        arr[index2] = temp;
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Nhập số phần tử: ");
        int n = sc.nextInt();
        int[] arr = new int[n];

        System.out.println("Nhập " + n + " số nguyên:");
        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }

        System.out.println("Mảng ban đầu: " + Arrays.toString(arr));

        System.out.print("Nhập chỉ số thứ nhất: ");
        int index1 = sc.nextInt();

        System.out.print("Nhập chỉ số thứ hai: ");
        int index2 = sc.nextInt();

        if (index1 >= 0 && index1 < n && index2 >= 0 && index2 < n) {
            swap(arr, index1, index2);
            System.out.println("Mảng sau khi hoán đổi: " + Arrays.toString(arr));
        } else {
            System.out.println("Chỉ số không hợp lệ!");
        }
    }
}
